<% layout("/layouts/boilerplate.ejs"); %>
<link rel="stylesheet" href="/css/profile/mylistings.css">

<div id="container">
    <h4 id="my-listings">My Listings</h4>
    <div>
        <p id="all-products">
            <% if (myProducts.length> 0) { %>
                All Products
                <% } else { %>
                    You have no products listed for sale!
                    <% } %>
        </p>
        <div id="product-listing">
            <% if (myProducts.length> 0) { %>
                <% myProducts.forEach(function(product) { %>
                    <a href="/forums/<%= forum._id %>/mart/products/<%= product._id %>">
                        <div class="card" style="width: 18rem;"
                            data-product-id="/forums/<%= forum._id %>/mart/products/<%= product._id %>">
                            <img src="<%= product.image.url %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product.title %>
                                </h5>
                                <!-- <p class="card-text">Posted by *Owner's name*</p> -->
                                <p href="#" class="btn btn-primary">&#x20B9;<%= product.price %>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% }) %>
                        <% } %>
