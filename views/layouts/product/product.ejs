<% layout("/layouts/boilerplate.ejs"); %>

    <link rel="stylesheet" href="/css/product/product.css">

    <div id="mart-parent">
        <div id="mart-container">
            <div id="mart">
                <div id="products">
                    <div>
                        <div id="all-products">
                            <h4><%= product.title %> <a href="/forums/<%= forum._id %>/mart/products/<%= product._id %>/editproduct"><i class="fa-regular fa-pen-to-square"></i></a> <a
                                    href=""><i class="fa-solid fa-trash"></i></a></h4>
                            <p>Posted by ${SELLER'S NAME}</p>
                        </div>

                        <div>
                            <div id="product-listing">
                                <img src="<%= product.image.url %>"
                                    alt="" id="product-image">

                                <p id="product-description"><%= product.description %></p>

                                <p href="#" class="btn btn-primary" id="price-btn">&#x20B9;
                                    <%= product.price %></p>
                                <p id="product-category">Category: <%= product.category %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

